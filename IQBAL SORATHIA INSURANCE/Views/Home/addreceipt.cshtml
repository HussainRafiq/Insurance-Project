@model IQBAL_SORATHIA_INSURANCE.Models.receipt

@{
    ViewBag.Title = "addreceipt";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<h2>Register Receipt</h2>
<h3 class="alert-info">@ViewBag.msg</h3>
<style>
    .form-control {
        font-size: 15px;
    }

    .btn-success {
        font-size: 15px;
    }

    .control-label {
        font-size: 15px;
    }
</style>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
