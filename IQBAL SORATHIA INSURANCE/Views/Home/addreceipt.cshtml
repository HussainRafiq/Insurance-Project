                @Html.ValidationMessageFor(model => model.receipt1)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Policy", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.policy, new { @class = "form-control" })
